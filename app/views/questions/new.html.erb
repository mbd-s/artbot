<%= form_for [@art, @question], url: art_questions_path do |f| %>
  <div>
    <%= f.label :text, "Question" %>
  </div>
  <div>
    <%= f.text_area :text, class:"form-control" %>
  </div>
  <div>
    <%= f.label :answer %>
  </div>
  <div>
    <%= f.text_area :answer, class:"form-control" %>
  </div>
  <div class="submit_button">
    <%= f.submit "Save New Question", class: "btn btn-default" %>
  </div>
<% end %>
