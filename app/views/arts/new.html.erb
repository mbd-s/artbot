<h2>Add New Artwork</h2>

<%= form_for @art do |f| %>
    <div>
      <%= f.label :image %>
      <%= f.text_field :image, class:"form-control" %>
    </div>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title, class:"form-control"%>
    </div>
    <div>
          <%= f.label :artist_id %>
           <select name="art[artist_id]" class="form-control" >
             <%= options_from_collection_for_select(Artist.all, :id, :name) %>
           </select>
    </div>
    <div>
      <%= f.label :year %>
      <%= f.text_field :year, class:"form-control" %>
    </div>
    <div>
      <%= f.label :century %>
      <%= f.text_field :century, class:"form-control" %>
    </div>
    <div>
      <%= f.label :medium %>
      <%= f.text_field :medium, class:"form-control" %>
    </div>
    <div class="submit_button">
      <%= f.submit "Save Art", class: "btn btn-default" %>
    </div>
  <% end %>
