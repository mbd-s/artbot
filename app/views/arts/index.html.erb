
<h1 class="arts-index-header">List Of Artworks</h1>
<div class="container main">
  <div class="row inline">

      <% @arts.each do |art| %>
        <div>
         Image: <%= image_tag art.image, :class => "art-image-show" %>
        </div>
        <div>
         Title: <%= art.title %>
        </div>
        <div>
         Artist: <%= art.artist %><br>
        </div>
        <div>
         Year: <%= art.year %><br>
        </div>
        <div>
         Century: <%= art.century %><br>
        </div>
        <div>
         Medium: <%= art.medium %><br>
        </div>
      <br>
      <% end %>
      <br>
  </div>
</div>
