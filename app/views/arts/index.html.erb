
<h1 class="arts-index-header">List Of Artworks</h1>
<div class="container main">
  <div class="row inline">

      <% @arts.each do |art| %>
        <div>
         <%= image_tag art.image, :class => "art-image-show" %>

        </div>
        <div>
         Title: <%=link_to art.title, art_path(art) %>
        </div>
         Artist: <%= art.artist%>
        <div>
        </div>
        <div>
         Year: <%= art.year %><br>
        </div>
        <div>
         Century: <%= art.century %><br>
        </div>
        <div>
         Medium: <%= art.medium %><br>
        </div>
      <br>
      <% end %>
      <br>
  </div>
</div>
