<h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <div class="field">
        <%= f.label :login, class:"control-label" %><br />
        <%= f.text_field :login, autofocus: true, class:"control-label" %>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", class:"control-label" %>
      </div>
    </div>

    <div class="form-group">
      <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class:"control-label" %>
      </div>
      <% end -%>
    </div>

    <div class="form-group">
      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-default" %>
      </div>
    </div>
    <% end %>

<%= render "devise/shared/links" %>
